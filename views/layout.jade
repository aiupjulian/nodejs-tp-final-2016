html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width')
    title= title
    block css
      link(rel='stylesheet', href='/css/style.css')
      link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Montserrat:400,700')
      link(rel='stylesheet', href='/components/bootstrap/dist/css/bootstrap.min.css')
    block js
      script(src='/components/jquery-2.2.4.min/index.js')
      if ENV_DEVELOPMENT
        script(src='http://localhost:35729/livereload.js')
  body
    - if (user) {
      ul#menu
        li Welcome 
          b #{user.email}
        li
          a(href='/logout') Sign-Off
    style.
      ul#menu {
        display: block;
        list-style: none;
        position: fixed;
        top: 0;
        background: #ccc;
        margin: 0;
        left: 0;
        width: 100%;
        padding: 10px 20px;
      }
      ul#menu li {
        float: left;
        padding: 0 10px;
      }
