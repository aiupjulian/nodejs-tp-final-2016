extends layout

block content
  h1= title
  p=JSON.stringify(employees)
  p
    a(href="/panel/employees/new") New
  table
    tr
      th N
      th First name
      th Last name
      th Email
      th Password
      th Options
    - employees.forEach(function(v,i){
    tr
      td=i
      td=v.firstName
      td=v.lastName
      td=v.email
      td=v.password
      td
        a(href="/panel/employees/edit/"+v._id) Edit
        | 
        a(href="/panel/employees/delete/"+v._id) Delete
    - });
